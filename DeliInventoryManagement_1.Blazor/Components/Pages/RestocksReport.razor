@page "/reports/restocks"

@using DeliInventoryManagement_1.Blazor.Models.V5
@using DeliInventoryManagement_1.Blazor.Models.Report
@inject DeliInventoryManagement_1.Blazor.Services.IDashboardService DashboardService
@inject DeliInventoryManagement_1.Blazor.Services.IReportsService ReportsService
@rendermode InteractiveServer
<h3>Restocks Report</h3>

<!-- =========================
         RESTOCKS REPORT
         ========================= -->
<h4>Restocks Report</h4>

<div class="row g-2 mb-3">
    <div class="col-md-3">
        <label class="form-label">From</label>
        <input type="date" class="form-control" @bind="restocksFrom" />
    </div>
    <div class="col-md-3">
        <label class="form-label">To</label>
        <input type="date" class="form-control" @bind="restocksTo" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary w-100" @onclick="LoadRestocks" disabled="@restocksLoading">
            @(restocksLoading ? "Loading..." : "Load Restocks")
        </button>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-outline-secondary w-100" @onclick="ClearRestocks" disabled="@restocksLoading">
            Clear
        </button>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(restocksError))
{
    <div class="alert alert-danger">@restocksError</div>
}
else if (restocks.Count == 0)
{
    <p class="text-muted">No restocks found for this period.</p>
}
else
{
    <div class="mb-2">
        <strong>Total quantity added:</strong> @restocks.Sum(x => x.QuantityAdded)
        <span class="mx-3"></span>
        <strong>Total cost:</strong> € @restocks.Sum(x => x.Cost)
    </div>

    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Product</th>
                <th>Supplier</th>
                <th class="text-end">Qty Added</th>
                <th class="text-end">Cost €</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in restocks.OrderByDescending(x => x.Date))
            {
                <tr>
                    <td>@r.Date.ToString("yyyy-MM-dd")</td>
                    <td>@r.ProductName</td>
                    <td>@r.SupplierName</td>
                    <td class="text-end">@r.QuantityAdded</td>
                    <td class="text-end">@r.Cost</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool isLoading;
    private string? errorMessage;

    // Stock
    private bool showLowStockOnly;
    private List<ProductV5Dto> products = new();

    private IEnumerable<ProductV5Dto> FilteredProducts =>
        showLowStockOnly ? products.Where(p => p.Quantity < p.ReorderLevel) : products;


    // Restocks
    private DateTime? restocksFrom;
    private DateTime? restocksTo;
    private bool restocksLoading;
    private string? restocksError;
    private List<RestockReportItem> restocks = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            products = await DashboardService.GetAllProductsAsync(null, null);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading reports: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

   

    private async Task LoadRestocks()
    {
        restocksError = null;
        restocksLoading = true;

        try
        {
            restocks = await ReportsService.GetRestocksAsync(restocksFrom, restocksTo);
        }
        catch (Exception ex)
        {
            restocksError = $"Error loading restocks report: {ex.Message}";
        }
        finally
        {
            restocksLoading = false;
        }
    }

    private void ClearRestocks()
    {
        restocksFrom = null;
        restocksTo = null;
        restocksError = null;
        restocks = new();
    }
}

