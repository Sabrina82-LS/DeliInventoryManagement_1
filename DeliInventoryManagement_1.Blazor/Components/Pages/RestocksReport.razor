@page "/reports/restocks"
@using DeliInventoryManagement_1.Blazor.Models.Report
@inject DeliInventoryManagement_1.Blazor.Services.IReportsService ReportsService
@rendermode InteractiveServer

<div class="restocksreport-wrap">
    <h1 class="restocksreport-title">Restocks Report</h1>
    <p class="muted">Filter by date range and review totals and line details.</p>

    <!-- Filters -->
    <div class="filters-grid">
        <div class="filter-card">
            <label class="form-label">From</label>
            <input type="date" class="form-control" @bind="restocksFrom" />
        </div>

        <div class="filter-card">
            <label class="form-label">To</label>
            <input type="date" class="form-control" @bind="restocksTo" />
        </div>

        <div class="actions">
            <button class="btn-pill btn-apply"
                    @onclick="LoadRestocks"
                    disabled="@restocksLoading">
                @(restocksLoading ? "Loading..." : "Load Restocks")
            </button>

            <button class="btn-pill btn-outline"
                    @onclick="ClearRestocks"
                    disabled="@restocksLoading">
                Clear
            </button>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(restocksError))
    {
        <div class="panel panel-danger">
            <strong>Error:</strong> @restocksError
        </div>
    }
    else if (!restocksLoading && restocks.Count == 0)
    {
        <div class="panel">
            <p class="muted mb-0">No restocks found for this period.</p>
        </div>
    }
    else if (restocks.Count > 0)
    {
        <!-- Summary cards -->
        <div class="summary-grid">
            <div class="panel summary-card">
                <div class="summary-label">Total quantity added</div>
                <div class="summary-value">@restocks.Sum(x => x.QuantityAdded)</div>
            </div>

            <div class="panel summary-card">
                <div class="summary-label">Total cost</div>
                <div class="summary-value">€ @restocks.Sum(x => x.Cost).ToString("0.00")</div>
            </div>
        </div>

        <!-- Table -->
        <div class="table-panel">
            <table class="table table-sm table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Product</th>
                        <th>Supplier</th>
                        <th class="text-end">Qty Added</th>
                        <th class="text-end">Cost €</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in restocks.OrderByDescending(x => x.Date))
                    {
                        <tr>
                            <td>@r.Date.ToString("yyyy-MM-dd")</td>
                            <td>@r.ProductName</td>
                            <td>@r.SupplierName</td>
                            <td class="text-end">@r.QuantityAdded</td>
                            <td class="text-end">@r.Cost.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private DateTime? restocksFrom;
    private DateTime? restocksTo;

    private bool restocksLoading;
    private string? restocksError;

    private List<RestockReportItem> restocks = new();

    private async Task LoadRestocks()
    {
        restocksError = null;
        restocksLoading = true;

        try
        {
            restocks = await ReportsService.GetRestocksAsync(restocksFrom, restocksTo);
        }
        catch (Exception ex)
        {
            restocksError = $"Error loading restocks report: {ex.Message}";
        }
        finally
        {
            restocksLoading = false;
        }
    }

    private void ClearRestocks()
    {
        restocksFrom = null;
        restocksTo = null;
        restocksError = null;
        restocks = new();
    }
}
