@page "/restocks"
@using DeliInventoryManagement_1.Blazor.Models
@inject DeliInventoryManagement_1.Blazor.Services.IDashboardService DashboardService

<h3>Restocks</h3>

@if (isLoading)
{
    <p>Loading products and suppliers...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <div class="card mb-3">
        <div class="card-header">New Restock</div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control" @bind="restockDate" />

                </div>
                <div class="col-md-4">
                    <label class="form-label">Supplier</label>
                    <select class="form-select" @bind="selectedSupplierId">
                        <option value="">-- Select supplier --</option>
                        @foreach (var s in suppliers)
                        {
                            <option value="@s.Id">@s.Id - @s.Name</option>

                        }
                    </select>
                </div>
            </div>
                
            <div class="row mb-3">
                <div class="col-md-5">
                    <label class="form-label">Product</label>
                    <select class="form-select" @bind="selectedProductId">
                        <option value="">-- Select product --</option>
                        @foreach (var p in products)
                        {
                            <option value="@p.Id">@p.Id - @p.Name (@p.CategoryName)</option>

                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Quantity</label>
                    <input type="number" min="1" class="form-control" @bind="lineQuantity" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Cost / unit</label>
                    <input type="number" step="0.01" class="form-control" @bind="lineUnitCost" />
                </div>
            </div>

            <button class="btn btn-primary" @onclick="AddLine">Add line</button>

            @if (!string.IsNullOrEmpty(lineError))
            {
                <div class="text-danger mt-2">@lineError</div>
            }
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">Restock Lines</div>
        <div class="card-body">
            @if (lines.Count == 0)
            {
                <p>No lines added yet.</p>
            }
            else
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-end">Qty</th>
                            <th class="text-end">Unit Cost</th>
                            <th class="text-end">Line Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var l in lines)
                        {
                            <tr>
                                <td>@l.ProductId - @l.ProductName</td>
                                <td class="text-end">@l.Quantity</td>
                                <td class="text-end">@l.UnitCost.ToString("0.00")</td>
                                <td class="text-end">@l.Total.ToString("0.00")</td>
                                <td class="text-end">
                                    <button class="btn btn-link btn-sm" @onclick="() => RemoveLine(l)">Remove</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="text-end fw-bold">
                    Total cost: @lines.Sum(l => l.Total).ToString("0.00")
                </div>
            }
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-success" @onclick="SaveRestock" disabled="@(lines.Count == 0 || string.IsNullOrEmpty(selectedSupplierId))">
                Save Restock
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(saveMessage))
    {
        <div class="alert alert-info">@saveMessage</div>
    }
}

@code {
    bool isLoading;
    string? errorMessage;

    List<ProductDto> products = new();
    List<SupplierDto> suppliers = new();

    DateTime restockDate = DateTime.Today;
    string? selectedSupplierId;
    string? selectedProductId;
    int lineQuantity = 1;
    decimal lineUnitCost = 0m;
    string? lineError;
    string? saveMessage;
   

    class RestockLineVm
    {
        public string ProductId { get; set; } = string.Empty;
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal UnitCost { get; set; }
        public decimal Total => Quantity * UnitCost;
    }


    List<RestockLineVm> lines = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            products = await DashboardService.GetAllProductsAsync(null, null);
            suppliers = await DashboardService.GetAllSuppliersAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddLine()
    {
        lineError = null;
        saveMessage = null;

        if (string.IsNullOrEmpty(selectedProductId))
        {
            lineError = "Select a product.";
            return;
        }

        if (lineQuantity <= 0)
        {
            lineError = "Quantity must be > 0.";
            return;
        }

        if (lineUnitCost <= 0)
        {
            lineUnitCost = 1m;
        }

        var product = products.First(p => p.Id == selectedProductId);

        lines.Add(new RestockLineVm
        {
            ProductId = product.Id,
            ProductName = product.Name,
            Quantity = lineQuantity,
            UnitCost = lineUnitCost
        });

        lineQuantity = 1;
        lineUnitCost = 0m;
    }

    private void RemoveLine(RestockLineVm line)
    {
        lines.Remove(line);
    }

    private async Task SaveRestock()
    {
        saveMessage = $"Restock saved locally with {lines.Count} lines, total cost {lines.Sum(l => l.Total):0.00}. " +
                      "TODO: send to API and increase stock.";

        // later: call POST /api/v1/restocks
        await Task.CompletedTask;
        lines.Clear();
    }
}
