@page "/reports/sales"
@using DeliInventoryManagement_1.Blazor.Models.Report
@inject DeliInventoryManagement_1.Blazor.Services.IReportsService ReportsService
@rendermode InteractiveServer

<div class="salesreport-wrap">
    <h1 class="salesreport-title">Sales Report</h1>
    <p class="muted">Filter by date range and review totals and line details.</p>

    <!-- Filters -->
    <div class="filters-grid">
        <div class="filter-card">
            <label class="form-label">From</label>
            <input type="date" class="form-control" @bind="salesFrom" />
        </div>

        <div class="filter-card">
            <label class="form-label">To</label>
            <input type="date" class="form-control" @bind="salesTo" />
        </div>

        <div class="actions">
            <button class="btn-pill btn-apply"
                    @onclick="LoadSales"
                    disabled="@salesLoading">
                @(salesLoading ? "Loading..." : "Load Sales")
            </button>

            <button class="btn-pill btn-outline"
                    @onclick="ClearSales"
                    disabled="@salesLoading">
                Clear
            </button>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(salesError))
    {
        <div class="panel panel-danger">
            <strong>Error:</strong> @salesError
        </div>
    }
    else if (!salesLoading && sales.Count == 0)
    {
        <div class="panel">
            <p class="muted mb-0">No sales found for this period.</p>
        </div>
    }
    else if (sales.Count > 0)
    {
        <!-- Summary cards -->
        <div class="summary-grid">
            <div class="panel summary-card">
                <div class="summary-label">Total items sold</div>
                <div class="summary-value">@sales.Sum(x => x.Quantity)</div>
            </div>

            <div class="panel summary-card">
                <div class="summary-label">Total revenue</div>
                <div class="summary-value">€ @sales.Sum(x => x.Total).ToString("0.00")</div>
            </div>
        </div>

        <!-- Table -->
        <div class="table-panel">
            <table class="table table-sm table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Product</th>
                        <th class="text-end">Qty</th>
                        <th class="text-end">Unit €</th>
                        <th class="text-end">Total €</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in sales.OrderByDescending(x => x.Date))
                    {
                        <tr>
                            <td>@s.Date.ToString("yyyy-MM-dd")</td>
                            <td>@s.ProductName</td>
                            <td class="text-end">@s.Quantity</td>
                            <td class="text-end">@s.UnitPrice.ToString("0.00")</td>
                            <td class="text-end">@s.Total.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private DateTime? salesFrom;
    private DateTime? salesTo;

    private bool salesLoading;
    private string? salesError;

    private List<SaleReportItem> sales = new();

    private async Task LoadSales()
    {
        salesError = null;
        salesLoading = true;

        try
        {
            sales = await ReportsService.GetSalesAsync(salesFrom, salesTo);
        }
        catch (Exception ex)
        {
            salesError = $"Error loading sales report: {ex.Message}";
        }
        finally
        {
            salesLoading = false;
        }
    }

    private void ClearSales()
    {
        salesFrom = null;
        salesTo = null;
        salesError = null;
        sales = new();
    }
}
