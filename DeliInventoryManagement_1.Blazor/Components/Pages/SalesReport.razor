@page "/reports/sales"
@using DeliInventoryManagement_1.Blazor.Models
@using DeliInventoryManagement_1.Blazor.Models.V5
@using DeliInventoryManagement_1.Blazor.Models.Report
@inject DeliInventoryManagement_1.Blazor.Services.IDashboardService DashboardService
@inject DeliInventoryManagement_1.Blazor.Services.IReportsService ReportsService
@rendermode InteractiveServer

<h3>Sales Report</h3>


<!-- =========================
        SALES REPORT
        ========================= -->
<h4>Sales Report</h4>

<div class="row g-2 mb-3">
    <div class="col-md-3">
        <label class="form-label">From</label>
        <input type="date" class="form-control" @bind="salesFrom" />
    </div>
    <div class="col-md-3">
        <label class="form-label">To</label>
        <input type="date" class="form-control" @bind="salesTo" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary w-100" @onclick="LoadSales" disabled="@salesLoading">
            @(salesLoading ? "Loading..." : "Load Sales")
        </button>
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-outline-secondary w-100" @onclick="ClearSales" disabled="@salesLoading">
            Clear
        </button>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(salesError))
{
    <div class="alert alert-danger">@salesError</div>
}
else if (sales.Count == 0)
{
    <p class="text-muted">No sales found for this period.</p>
}
else
{
    <div class="mb-2">
        <strong>Total items sold:</strong> @sales.Sum(x => x.Quantity)
        <span class="mx-3"></span>
        <strong>Total revenue:</strong> € @sales.Sum(x => x.Total)
    </div>

    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Product</th>
                <th class="text-end">Qty</th>
                <th class="text-end">Unit €</th>
                <th class="text-end">Total €</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in sales.OrderByDescending(x => x.Date))
            {
                <tr>
                    <td>@s.Date.ToString("yyyy-MM-dd")</td>
                    <td>@s.ProductName</td>
                    <td class="text-end">@s.Quantity</td>
                    <td class="text-end">@s.UnitPrice</td>
                    <td class="text-end">@s.Total</td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

@code {
    private bool isLoading;
    private string? errorMessage;

    // Stock
    private bool showLowStockOnly;
    private List<ProductV5Dto> products = new();

    private IEnumerable<ProductV5Dto> FilteredProducts =>
        showLowStockOnly ? products.Where(p => p.Quantity < p.ReorderLevel) : products;

    // Sales
    private DateTime? salesFrom;
    private DateTime? salesTo;
    private bool salesLoading;
    private string? salesError;
    private List<SaleReportItem> sales = new();

    

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            products = await DashboardService.GetAllProductsAsync(null, null);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading reports: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadSales()
    {
        salesError = null;
        salesLoading = true;

        try
        {
            sales = await ReportsService.GetSalesAsync(salesFrom, salesTo);
        }
        catch (Exception ex)
        {
            salesError = $"Error loading sales report: {ex.Message}";
        }
        finally
        {
            salesLoading = false;
        }
    }

    private void ClearSales()
    {
        salesFrom = null;
        salesTo = null;
        salesError = null;
        sales = new();
    }

    
}
