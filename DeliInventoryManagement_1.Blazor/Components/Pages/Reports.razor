@page "/reports"
@using System.Linq
@using DeliInventoryManagement_1.Blazor.Models.V5
@inject DeliInventoryManagement_1.Blazor.Services.IDashboardService DashboardService
@rendermode InteractiveServer

<h3>Reports</h3>

<p class="text-muted">
    Choose a report below or view the Stock report summary.
</p>

<div class="d-flex flex-wrap gap-2 mb-4">
    <a class="btn btn-primary" href="/reports/sales">Sales Report</a>
    <a class="btn btn-primary" href="/reports/restocks">Restocks Report</a>
</div>

@if (isLoading)
{
    <p>Loading stock report...</p>
}
else if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <h4 class="mt-3">Stock Report (V5)</h4>

    <div class="form-check mb-2">
        <input class="form-check-input" type="checkbox" id="lowStockOnly" @bind="showLowStockOnly" />
        <label class="form-check-label" for="lowStockOnly">
            Show low-stock only
        </label>
    </div>

    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Category</th>
                <th class="text-end">Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in FilteredProducts)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.CategoryName</td>
                    <td class="text-end">@p.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool isLoading;
    private string? errorMessage;

    private bool showLowStockOnly;

    // ✅ V5 model
    private List<ProductV5Dto> products = new();

    private IEnumerable<ProductV5Dto> FilteredProducts =>
        showLowStockOnly
            ? products.Where(p => p.Quantity < p.ReorderLevel)
            : products;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            // ✅ seu DashboardService deve retornar V5 products
            products = await DashboardService.GetAllProductsAsync(null, null);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading stock report: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
