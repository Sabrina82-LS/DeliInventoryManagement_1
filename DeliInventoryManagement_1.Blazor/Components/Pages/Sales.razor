@page "/sales"
@using DeliInventoryManagement_1.Blazor.Models
@using DeliInventoryManagement_1.Blazor.Models.Legacy
@using DeliInventoryManagement_1.Blazor.Services
@inject IDashboardService DashboardService
@inject ISalesService SalesService
@inject NavigationManager Nav
@rendermode InteractiveServer

<h3>Sales</h3>

@if (isLoading)
{
    <p>Loading products...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <div class="card mb-3">
        <div class="card-header">
            New Sale
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control" @bind="saleDate" />
                </div>

                <div class="col-md-5">
                    <label class="form-label">Product</label>
                    <select class="form-select" @bind="selectedProductId" disabled="@isSaving">
                        <option value="">-- Select product --</option>
                        @foreach (var p in products)
                        {
                            <option value="@p.Id">@p.Name (@p.CategoryName)</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">Quantity</label>
                    <input type="number" min="1" class="form-control" @bind="lineQuantity" disabled="@isSaving" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Unit Price</label>
                    <input type="number" step="0.01" min="0.01" class="form-control" @bind="lineUnitPrice" disabled="@isSaving" />
                </div>
            </div>

            <button class="btn btn-primary" @onclick="AddLine" disabled="@isSaving">Add line</button>

            @if (!string.IsNullOrEmpty(lineError))
            {
                <div class="text-danger mt-2">@lineError</div>
            }
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            Sale Lines
        </div>
        <div class="card-body">
            @if (lines.Count == 0)
            {
                <p>No lines added yet.</p>
            }
            else
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-end">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Line Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var l in lines)
                        {
                            <tr>
                                <td>@l.ProductName</td>
                                <td class="text-end">@l.Quantity</td>
                                <td class="text-end">@l.UnitPrice.ToString("0.00")</td>
                                <td class="text-end">@l.Total.ToString("0.00")</td>
                                <td class="text-end">
                                    <button class="btn btn-link btn-sm"
                                            @onclick="() => RemoveLine(l)"
                                            disabled="@isSaving">
                                        Remove
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="text-end fw-bold">
                    Total: @lines.Sum(l => l.Total).ToString("0.00")
                </div>
            }
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-success"
                    @onclick="SaveSaleAsync"
                    disabled="@(lines.Count == 0 || isSaving)">
                @(isSaving ? "Saving..." : "Save Sale")
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(saveMessage))
    {
        <div class="alert alert-info">@saveMessage</div>
    }

    @if (!string.IsNullOrEmpty(saveError))
    {
        <div class="alert alert-danger">@saveError</div>
    }
}

@code {
    private bool isLoading;
    private bool isSaving;
    private string? errorMessage;

    private List<ProductDto> products = new();

    private DateTime saleDate = DateTime.Today;
    private string selectedProductId = "";
    private int lineQuantity = 1;
    private decimal lineUnitPrice = 0m;
    private string? lineError;

    private string? saveMessage;
    private string? saveError;

    private sealed class SaleLineVm
    {
        public string ProductId { get; set; } = string.Empty;
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal UnitPrice { get; set; }
        public decimal Total => Quantity * UnitPrice;
    }

    private readonly List<SaleLineVm> lines = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProductsAsync();
    }

    private async Task LoadProductsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            products = await DashboardService.GetAllProductsAsync(null, null);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading products: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddLine()
    {
        lineError = null;
        saveMessage = null;
        saveError = null;

        if (string.IsNullOrWhiteSpace(selectedProductId))
        {
            lineError = "Select a product.";
            return;
        }

        var product = products.FirstOrDefault(p => p.Id == selectedProductId);
        if (product is null)
        {
            lineError = "Selected product not found. Reload the page and try again.";
            return;
        }

        if (lineQuantity <= 0)
        {
            lineError = "Quantity must be > 0.";
            return;
        }

        if (lineUnitPrice <= 0)
        {
            lineError = "Unit Price must be > 0.";
            return;
        }

        // (Opcional) validação local de stock, se ProductDto tiver Quantity:
        // if (product.Quantity < lineQuantity) { lineError = $"Not enough stock. Available={product.Quantity}"; return; }

        lines.Add(new SaleLineVm
        {
            ProductId = product.Id,
            ProductName = product.Name,
            Quantity = lineQuantity,
            UnitPrice = lineUnitPrice
        });

        // reset inputs
        selectedProductId = "";
        lineQuantity = 1;
        lineUnitPrice = 0m;
    }

    private void RemoveLine(SaleLineVm line)
    {
        saveMessage = null;
        saveError = null;
        lines.Remove(line);
    }

    private async Task SaveSaleAsync()
    {
        saveMessage = null;
        saveError = null;
        lineError = null;

        if (lines.Count == 0)
        {
            saveError = "Add at least one line before saving.";
            return;
        }

        isSaving = true;

        try
        {
            var req = new CreateSaleRequest
            {
                Date = saleDate,
                Lines = lines.Select(l => new CreateSaleLineRequest
                {
                    ProductId = l.ProductId,
                    ProductName = l.ProductName,
                    Quantity = l.Quantity,
                    UnitPrice = l.UnitPrice
                }).ToList()
            };

            var result = await SalesService.CreateSaleAsync(req);

            // ✅ Atualiza mensagem
            saveMessage = $"✅ Sale saved in API. Id: {result.SaleId} | Total: {result.Total:0.00}";

            // ✅ limpa após salvar
            lines.Clear();

            // ✅ OPÇÃO 1: recarrega produtos do servidor (já vem com Quantity atualizado)
            await LoadProductsAsync();

            // ✅ OPÇÃO 1 (extra): ir direto para Stock já atualizado
            // Se não quiser navegar automaticamente, basta comentar a linha abaixo.
            Nav.NavigateTo("/stock");
        }
        catch (Exception ex)
        {
            saveError = $"❌ Failed to save sale: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }
}
